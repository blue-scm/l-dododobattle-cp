<div class="mv">
    <div class="mv__inner">
        <h1 class="mv__logo">
            <img src="<%= imgDir %>logo.webp" alt="LINE ドドドバトル" width="277" height="168">
        </h1>
        <div class="mv__chara -brown">
            <img src="<%= commonDir %>chara_brown.webp" alt="" width="102" height="138">
        </div>
        <div class="mv__chara -sally">
            <img src="<%= commonDir %>chara_sally.webp" alt="" width="122" height="109">
        </div>
        <div class="mv__main">
            <img src="<%= imgDir %>main.webp" alt="" width="390" height="660">
        </div>
        <a href="<%= common.dl.common %>" target="_blank" rel="noopener noreferrer" class="mv__link">
            <img src="<%= commonDir %>ph_btn_play.webp" alt="ゲームプレイで豪華賞品が当たる！今すぐプレイ！" width="350" height="98">
        </a>
        <a href="https://x.com/intent/post?text=https%3A%2F%2Fdododo.game.line.me%2Fja%2Fdododo-cp%2F%20%23%E3%83%89%E3%83%89%E3%83%89%E3%83%90%E3%83%88%E3%83%AB" target="_blank" rel="noopener noreferrer" class="mv__x">
            <div class="mv__x__baloon">
                <img src="<%= imgDir %>txt_baloon.svg" alt="お祝いしよう！" width="64" height="60">
            </div>
            <div class="mv__x__detail">
                <div class="mv__x__icon">
                    <img src="<%= imgDir %>icon_x.svg" alt="X" width="32" height="32">
                </div>
                <div class="mv__x__text">
                    <img src="<%= imgDir %>txt_x_hashtag.svg" alt="#ドドドバトル" width="111" height="22">
                </div>
            </div>
        </a>
        <div class="mv__movie">
            <div id="movie" class="mv__movie__container" data-yt-container="vKVjBJdGjPI" data-playervars='{ "controls": 0, "playsinline": 1, "autoplay": 1, "mute": 1, "loop":1, "playlist": "vKVjBJdGjPI", "disablekb": 1, "modestbranding": 1}'></div>
            <div class="mv__movie__noise"></div>
            <div class="mv__movie__frame"></div>
            <p class="mv__movie__text">ドドドの世界はここからCHECK!</p>
            <button type="button" class="mv__movie__trigger js-modal_open" data-play-trigger="modalPlayer" data-modalID="movie">
                <img src="<%= imgDir %>icon_play.webp" alt="" width="61" height="64">
            </button>
        </div>
    </div>
</div>
