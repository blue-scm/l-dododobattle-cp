            </div>
        </div>


    </div>
</div>

<div class="contents js-contents">

    <main class="l-main">

        <div class="l-main__videobg">
            <video poster="<%= pageInfo.relPath %>assets/img/movie.jpg" webkit-playsinline playsinline muted autoplay loop>
                <source src="<%= pageInfo.relPath %>assets/mov/pv.mp4" type="video/mp4">
            </video>
        </div>
        

        <section class="mv -top">

            <p class="mv__maincatch">
                <img src="<%= pageInfo.relPath %>assets/img/mv/txt_maincatch.png" alt="押し寄せる！ドドドな爽快感！">
            </p>

            <div class="mv__chara -sally">
                <img src="<%= pageInfo.relPath %>assets/img/mv/ph_sally.png" alt="">
            </div>

            <div class="mv__chara -brown">
                <img src="<%= pageInfo.relPath %>assets/img/mv/ph_brown.png" alt="">
            </div>

            <h1 class="mv__logo">
                <img src="<%= pageInfo.relPath %>assets/img/mv/logo.png" alt="LINEドドドバトル">
            </h1>
            
            <div class="mv__dl">
                <p class="mv__dl__txt">
                    <img src="<%= pageInfo.relPath %>assets/img/mv/txt_dl.png" alt="好評配信中！">
                </p>
                <a class="mv__dl__btn" href="" target="_blank">
                    <img src="<%= pageInfo.relPath %>assets/img/mv/btn_dl.png" alt="今すぐダウンロード！">
                </a>
            </div> 

            <div class="mv__links">
                <a class="mv__links__btn" href="" target="_blank">
                    <img src="<%= pageInfo.relPath %>assets/img/mv/btn_line.png" alt="">
                </a>

                <a class="mv__links__btn" href="" target="_blank">
                    <img src="<%= pageInfo.relPath %>assets/img/mv/btn_x.png" alt="">
                </a>
            </div>
        </section>

        <section class="about">

            <div class="about__inner">
                <p class="about__catch">
                    <img src="<%= pageInfo.relPath %>assets/img/about/txt_catch.png" alt="群がるモンスターの大群を結らせ！">
                </p>
    
                <div class="about__pv">
                    <div class="about__pv__shadow"></div>
                    <div class="about__pv__cont">
                        <div class="about__pv__cont__movie"></div>
                    </div>
                    
                    <p class="about__pv__balloon">
                        <img src="<%= pageInfo.relPath %>assets/img/about/txt_balloon.png" alt="WATCH PV!">
                    </p>
                </div>
            </div>
            
        </section>

        <section class="keywords">

            <div class="keywords__inner">


                <div class="keywords__head">
                    <div class="keywords__head__bg">
                        <img src="<%= pageInfo.relPath %>assets/img/keywords/bg_tape.png" alt="">
                    </div>
                    <h2 class="keywords__head__ttl">
                        <img src="<%= pageInfo.relPath %>assets/img/keywords/ttl_main.png" alt="ドドドバトルがわかる5つのキーワード">
                    </h2>
                </div>
    
                <div class="keywords__cont">
    
                    <% for (var i = 0; i < 5; i++) { %>
                    <div class="keywords__cont__item -key<%= i+1 %>">

                        <div class="keywords__cont__item__bg"></div>
                               
                        <h3 class="keywords__cont__item__ttl">
                            <span class="ttl"><img src="<%= pageInfo.relPath %>assets/img/keywords/ttl_key<%= i+1 %>.png" alt=""></span>
                            <span class="ttltxt"><img src="<%= pageInfo.relPath %>assets/img/keywords/ttltxt_key<%= i+1 %>.png" alt=""></span>
                        </h3>

                        <div class="keywords__cont__item__movie">
                            <div class="keywords__cont__item__movie__inner">
                                <video poster="<%= pageInfo.relPath %>assets/img/movie.jpg" webkit-playsinline playsinline muted autoplay loop>
                                    <source src="<%= pageInfo.relPath %>assets/mov/mov_<%= i+1 %>.mp4" type="video/mp4">
                                </video>
                            </div>
                        </div>

                        <p class="keywords__cont__item__catch">
                            <img src="<%= pageInfo.relPath %>assets/img/keywords/txt_catch_key<%= i+1 %>.png" alt="">
                        </p>

                        <div class="keywords__cont__item__chara">
                            <img src="<%= pageInfo.relPath %>assets/img/keywords/ph_chara_key<%= i+1 %>.png" alt="">
                        </div>
    
                    </div>
                    <% } %>
    
                </div>
                
                <div class="keywords__bottom">
                    <div class="keywords__bottom__inner">
                        <div class="keywords__boottom__tape1">
                            <img src="<%= pageInfo.relPath %>assets/img/keywords/bg_tape_bottom_1.png" alt="">
                        </div>
                        <div class="keywords__boottom__tape2">
                            <img src="<%= pageInfo.relPath %>assets/img/keywords/bg_tape_bottom_2.png" alt="">
                        </div>
                    </div>
                    
                </div>

            </div>

        </section>


        <section class="mv -bottom">

            <h1 class="mv__logo">
                <img src="<%= pageInfo.relPath %>assets/img/mv/logo.png" alt="LINEドドドバトル">
            </h1>
            
            <div class="mv__dl">
                <p class="mv__dl__txt">
                    <img src="<%= pageInfo.relPath %>assets/img/mv/txt_dl.png" alt="好評配信中！">
                </p>
                <a class="mv__dl__btn" href="" target="_blank">
                    <img src="<%= pageInfo.relPath %>assets/img/mv/btn_dl.png" alt="今すぐダウンロード！">
                </a>
            </div> 

            <div class="mv__links">
                <a class="mv__links__btn" href="" target="_blank">
                    <img src="<%= pageInfo.relPath %>assets/img/mv/btn_line.png" alt="">
                </a>

                <a class="mv__links__btn" href="" target="_blank">
                    <img src="<%= pageInfo.relPath %>assets/img/mv/btn_x.png" alt="">
                </a>
            </div>
        </section>

        <section class="bottom">

            <button class="bottom__pagetop">
                <div class="bottom__pagetop__inner">
                    <span class="shadow"><img src="<%= pageInfo.relPath %>assets/img/bottom/ph_pagetop_shadow.png" alt=""></span>
                    <span class="brown"><img src="<%= pageInfo.relPath %>assets/img/bottom/ph_pagetop.png" alt=""></span>
                    <p class="balloon"><img src="<%= pageInfo.relPath %>assets/img/bottom/txt_balloon.png" alt=""></p>
                </div>
            </button>
        </section>

    </main>

    <footer class="l-footer">
        <div class="l-footer__row">

            <div class="l-footer__head">
                <div class="l-footer__head__ico">
                    <img src="<%= pageInfo.relPath %>assets/img/footer/ico_app.png" alt="">
                </div>
                <div class="l-footer__head__logo">
                    <img src="<%= pageInfo.relPath %>assets/img/footer/logo.png" alt="LINEドドドバトル">
                </div>
            </div>

            <div class="l-footer__dllinks">
                <a href="" target="_blank" class="l-footer__dllinks__item">
                    <img src="<%= pageInfo.relPath %>assets/img/common/btn_appstore.png" alt="">
                </a>
                <a href="" target="_blank" class="l-footer__dllinks__item">
                    <img src="<%= pageInfo.relPath %>assets/img/common/btn_googleplay.png" alt="">
